<div class="showpage_songs_container">
  <ol>
    <h3> Spotify Playlist </h3>
    <% current_songs = @setlist_songs.where(list_status: 2) %>
    <% current_songs.each do |current_song| %>
      <% song = current_song.song %>
      <li><span class="song_name"><%= song.title %></span></li>

      <h7 class="song_details">
        <span class="artist_name"><%= song.artist %></span> |
        <span class="album_name"><%= song.album %></span>
      </h7>

       <div class="vote_buttons">
          <% if params[:action] == "show" %>
            <%= render partial: 'votes/new', layout: false, locals: {setlist_song: current_song} %>
          <% end %>
        </div>
    <% end %>
  </ol>
  <ol>
    <h3> Pending Songs </h3>
    <% pending_songs = @setlist_songs.where(list_status: 0) %>
    <% pending_songs.each do |pending_song| %>
      <% suggested_song = pending_song.song %>
      <li>
        <%= suggested_song.title %>
      </li>
      <h7 class="song_details">
        <span class="artist_name"><%= suggested_song.artist %></span> |
        <span class="album_name"><%= suggested_song.album %></span>
      </h7>
    <% end %>
  </ol>

  <h2 class="search_form"><%=render partial: "search/new", locals: {setlist_id: @setlist.id}%></h2>
</div>
